<div
  class="modal fade new-board-modal"
  id="newBoardModal"
  tabindex="-1"
  aria-labelledby="editBoardModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newBoardModalLabel">New board</h5>
        <button type="button" class="btn close" data-bs-dismiss="modal">
          <i class="fa-solid fa-xmark"></i>
        </button>
      </div>
      <%= form_with(model: boards.new, local: true) do |f| %>
      <div class="modal-body form-new-board">
        <div class="fields-container">
          <div class="form-group row">
            <div class="col-10">
              <i class="fa-regular fa-square-check fa-lg"></i>
              <%= f.text_field :name, class: "field", placeholder: "Name your Board" %>
            </div>
          </div>

          <div class="form-group row">
            <div class="label-container">
              <i class="fa-solid fa-align-left"></i>
              <%= f.label :description, class: "col-form-label" %><br />
            </div>
            <div class="col-12">
              <%= f.text_area :description, class: "field-area", placeholder:
              "Add your description" %>
            </div>
          </div>

          <div class="form-group row points-control">
            <div class="col-12 d-flex">
              <span class="points-label"
                ><%= f.label :visibility, class: "col-form-label" %></span
              >
              <%= f.select(:visibility, raw("
              <option>public</option>
              <option>private</option>
              "), {}, class: "select-points form-select") %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-12 d-flex">
              <%= f.label :image, class:"form-label" %><br />
              <%= f.file_field :image, autofocus: true, class:"field" %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="form-group row justify-content-center">
          <%= f.submit "Add", class:"btn new-board-btn" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
