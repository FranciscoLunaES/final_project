<section class="background-devise">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-white text-dark" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <div class="pb-5">
              <h2 class="fw-bold mb-2 text-uppercase">Log in</h2>
              <p class="text-white-50 mb-5">Please enter your login and password!</p>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                <div class="form-outline form-dark mb-4">
                  <%= f.label :email, class:"form-label" %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-lg" %>
                </div>
                
                <div class="form-outline form-dark mb-4">
                  <%= f.label :password, class:"form-label" %>
                  <%= f.password_field :password, autocomplete: "new-password", class:"form-control form-control-lg" %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>
                
                <%= f.submit "Log in", class:"btn btn-outline-success btn-lg px-5 mt-3" %>
              <% end %>

              <div class="d-flex flex-column justify-content-center text-center mt-4 pt-1">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
