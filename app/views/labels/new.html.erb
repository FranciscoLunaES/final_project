<div class="modal fade new-label-modal" id="newLabelModal" tabindex="-1" aria-labelledby="newLabelModalLabel" aria-hidden="true">
   <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newLabelModalLabel">New label</h5>
        <button type="button" class="btn close" data-bs-dismiss="modal"><i class="fa-solid fa-xmark"></i></button>
      </div>
      <%= form_with(model: Label.new, local:true) do |f| %>
        <div class="modal-body form-new-label">
          <div class="fields-container">
            <div class="form-group row">
              <div class="col-10">
                <i class="fa-regular fa-square-check fa-lg"></i>
                <%= f.text_field :name, class: "field", placeholder: "Name your label" %>
              </div>
            </div>
  
            <div class="form-group row points-control">
              <div class="col-12 d-flex">
                <span class="points-label"><%= f.label :color, class: "col-form-label" %></span>
                <%= f.color_field :color %>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <div class="form-group row justify-content-center">
            <%= f.submit  "Add", class:"btn new-label-btn" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>