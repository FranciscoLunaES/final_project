<div class="modal fade new-list-modal" id="newListModal<%= @board.id %>" tabindex="-1" aria-labelledby="newListModalLabel" aria-hidden="true">
   <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newTaskModalLabel">New List</h5>
        <button type="button" class="btn close" data-bs-dismiss="modal"><i class="fa-solid fa-xmark"></i></button>
      </div>
      <%= form_with(model: [board, List.new], local:true) do |f| %>
        <div class="modal-body form-new-list">
          <div class="fields-container">
            <div class="form-group row">
              <div class="col-10">
                <i class="fa-regular fa-square-check fa-lg"></i>
                <%= f.text_field :name, class: "field", placeholder: "Name your list" %>
              </div>
            </div>
  
            <div class="form-group row">
              <div class="label-container">
                <i class="fa-solid fa-align-left"></i>
                <%= f.label :description, class: "col-form-label" %><br />
              </div>
              <div class="col-12">
                <%= f.text_area :description, class: "field-area", placeholder: "Add your description" %>
              </div>
            </div>
  
            <div class="form-group row points-control">
              <div class="col-12 d-flex">
                <span class="points-label"><%= f.label :priority, class: "col-form-label" %></span>
                <%= f.select(:priority, 
                raw("<option>High</option><option>Medium</option><option>Low</option>"), {},
                class: "select-points form-select") %>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <div class="form-group row justify-content-center">
            <%= f.submit  "Add", class:"btn add-task-btn" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>